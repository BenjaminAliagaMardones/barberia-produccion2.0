        <div class="relative rounded-2xl overflow-hidden shadow-2xl shadow-yellow-600/20 aspect-[4/5] sm:aspect-[3/4] lg:aspect-[4/3]">
          <img 
            src={withBase('/images/john-karlo-mendoza-idzUojjazCg-unsplash.webp')} 
            alt="Equipo Barber√≠a Premium Temuco" 
            class="w-full h-full object-cover"
            loading="lazy"
          />
          <!-- Badge flotante -->
          <div class="absolute top-5 right-5 bg-yellow-600 text-black px-6 py-3 rounded-full shadow-lg">
            <p class="font-bold text-lg">5+ a√±os</p>
            <p class="text-xs">de experiencia</p>
          </div>
