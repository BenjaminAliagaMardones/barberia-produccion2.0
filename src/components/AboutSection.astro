---
/**
 * AboutSection.astro
 * Secci√≥n "Sobre Nosotros" para la barber√≠a
 */
import { barberia } from '../data/barberia.js';

const { about } = barberia;
const basePath = (import.meta.env.BASE_URL || '/').replace(/\/$/, '');

const withBase = (path: string) => {
  if (!path) return '';
  const normalized = path.startsWith('/') ? path : `/${path}`;
  return `${basePath}${normalized}`;
};

const resolveLink = (href: string) => {
  if (!href) return '#';
  const isExternal = /^https?:\/\//.test(href) || href.startsWith('#') || href.startsWith('mailto:') || href.startsWith('tel:');
  if (isExternal) return href;
  return withBase(href);
};
---

<section id="nosotros" class="py-16 lg:py-20 px-4 bg-neutral-900">
  <div class="max-w-7xl mx-auto">
    <!-- Encabezado -->
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-4xl md:text-5xl font-heading font-bold text-white mb-4">
        {about.title}
      </h2>
      <p class="text-xl text-yellow-400 font-semibold mb-6">
        {about.subtitle}
      </p>
      <div class="w-24 h-1 bg-yellow-500 mx-auto"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-10 lg:gap-16 items-center">
      <!-- Columna izquierda: Imagen del barbero/local -->
