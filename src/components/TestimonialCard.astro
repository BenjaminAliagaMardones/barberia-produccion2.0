---
/**
 * TestimonialCard.astro
 * Tarjeta d  <!-- Información del cliente -->
  <div class="flex items-center gap-4 pt-4 border-t border-gray-200">
    <img
      src={image}
      alt={name}
      class="w-12 h-12 md:w-14 md:h-14 rounded-full object-cover ring-2 ring-brand-200"
      loading="lazy"
    />
    <div>
      <h4 class="font-bold text-gray-900">{name}</h4>
      <p class="text-sm text-gray-600">{role}</p>
      {city && (
        <p class="text-xs text-gray-500 flex items-center gap-1 mt-0.5">
          <svg class="w-3 h-3" fill="none" strokeLinecap="round" strokeLinejoin="round" strokeWidth="2" viewBox="0 0 24 24" stroke="currentColor">
            <path d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"/>
            <path d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"/>
          </svg>
          {city}
        </p>
      )}
    </div>
  </div>con avatar circular, nombre, texto y rating
 * Diseño profesional con comillas decorativas
 */

interface Props {
  name: string;
  text: string;
  image: string;
  role?: string;
  city?: string;
  rating?: number;
}

const { name, text, image, role = 'Cliente', city, rating = 5 } = Astro.props;
---

<div class="bg-white rounded-2xl p-6 md:p-8 shadow-card hover:shadow-brand transition-shadow duration-300 relative">
  <!-- Icono de comillas decorativo -->
  <div class="absolute top-6 right-6 text-brand-100">
    <svg class="w-12 h-12 md:w-16 md:h-16" fill="currentColor" viewBox="0 0 24 24">
      <path d="M14.017 21v-7.391c0-5.704 3.731-9.57 8.983-10.609l.995 2.151c-2.432.917-3.995 3.638-3.995 5.849h4v10h-9.983zm-14.017 0v-7.391c0-5.704 3.748-9.57 9-10.609l.996 2.151c-2.433.917-3.996 3.638-3.996 5.849h3.983v10h-9.983z"/>
    </svg>
  </div>

  <!-- Rating (Estrellas) -->
  <div class="flex gap-1 mb-4">
    {Array.from({ length: 5 }).map((_, i) => (
      <svg
        class={`w-5 h-5 ${i < rating ? 'text-yellow-400' : 'text-gray-300'}`}
        fill="currentColor"
        viewBox="0 0 20 20"
      >
        <path d="M9.049 2.927c.3-.921 1.603-.921 1.902 0l1.07 3.292a1 1 0 00.95.69h3.462c.969 0 1.371 1.24.588 1.81l-2.8 2.034a1 1 0 00-.364 1.118l1.07 3.292c.3.921-.755 1.688-1.54 1.118l-2.8-2.034a1 1 0 00-1.175 0l-2.8 2.034c-.784.57-1.838-.197-1.539-1.118l1.07-3.292a1 1 0 00-.364-1.118L2.98 8.72c-.783-.57-.38-1.81.588-1.81h3.461a1 1 0 00.951-.69l1.07-3.292z"/>
      </svg>
    ))}
  </div>

  <!-- Texto del testimonio -->
  <p class="text-gray-700 leading-relaxed mb-6 italic relative z-10">
    "{text}"
  </p>

  <!-- Información del cliente -->
  <div class="flex items-center gap-4 pt-4 border-t border-gray-200">
    <img
      src={image}
      alt={name}
      class="w-12 h-12 md:w-14 md:h-14 rounded-full object-cover ring-2 ring-brand-200"
      loading="lazy"
    />
    <div>
      <h4 class="font-bold text-gray-900">{name}</h4>
      <p class="text-sm text-gray-600">{role}</p>
    </div>
  </div>
</div>
