---
/**
 * ContactSection.astro
 * SecciÃ³n de contacto con WhatsApp, formulario y mapa
 */
import { barberia } from '../data/barberia.js';

const { contact, business } = barberia;
---

<section id="contacto" class="py-20 px-4 bg-neutral-900">
  <div class="max-w-7xl mx-auto">
    <!-- Encabezado -->
    <div class="text-center mb-16" data-aos="fade-up">
      <h2 class="text-4xl md:text-5xl font-heading font-bold text-white mb-4">
        {contact.title}
      </h2>
      <p class="text-xl text-yellow-400 font-semibold mb-6">
        {contact.subtitle}
      </p>
      <p class="text-neutral-300 max-w-2xl mx-auto">
        {contact.description}
      </p>
      <div class="w-24 h-1 bg-yellow-500 mx-auto mt-6"></div>
    </div>

    <div class="grid grid-cols-1 lg:grid-cols-2 gap-12">
      <!-- Columna izquierda: InformaciÃ³n de contacto y WhatsApp -->
      <div class="space-y-8">
        <!-- Tarjeta de WhatsApp destacada - MEJORADA -->
        <div 
          class="relative bg-gradient-to-br from-green-500 via-green-600 to-green-700 rounded-2xl p-8 shadow-2xl shadow-green-500/50 overflow-hidden"
          data-aos="fade-right"
        >
          {/* Efectos de fondo */}
          <div class="absolute top-0 right-0 w-64 h-64 bg-white/10 rounded-full blur-3xl"></div>
          <div class="absolute bottom-0 left-0 w-48 h-48 bg-white/5 rounded-full blur-2xl"></div>
          
          <div class="relative z-10">
            <div class="flex items-center space-x-4 mb-6">
              <div class="bg-white/20 backdrop-blur-sm p-4 rounded-full shadow-lg animate-pulse-slow">
                <svg class="w-10 h-10 text-white drop-shadow-lg" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M17.472 14.382c-.297-.149-1.758-.867-2.03-.967-.273-.099-.471-.148-.67.15-.197.297-.767.966-.94 1.164-.173.199-.347.223-.644.075-.297-.15-1.255-.463-2.39-1.475-.883-.788-1.48-1.761-1.653-2.059-.173-.297-.018-.458.13-.606.134-.133.298-.347.446-.52.149-.174.198-.298.298-.497.099-.198.05-.371-.025-.52-.075-.149-.669-1.612-.916-2.207-.242-.579-.487-.5-.669-.51-.173-.008-.371-.01-.57-.01-.198 0-.52.074-.792.372-.272.297-1.04 1.016-1.04 2.479 0 1.462 1.065 2.875 1.213 3.074.149.198 2.096 3.2 5.077 4.487.709.306 1.262.489 1.694.625.712.227 1.36.195 1.871.118.571-.085 1.758-.719 2.006-1.413.248-.694.248-1.289.173-1.413-.074-.124-.272-.198-.57-.347m-5.421 7.403h-.004a9.87 9.87 0 01-5.031-1.378l-.361-.214-3.741.982.998-3.648-.235-.374a9.86 9.86 0 01-1.51-5.26c.001-5.45 4.436-9.884 9.888-9.884 2.64 0 5.122 1.03 6.988 2.898a9.825 9.825 0 012.893 6.994c-.003 5.45-4.437 9.884-9.885 9.884m8.413-18.297A11.815 11.815 0 0012.05 0C5.495 0 .16 5.335.157 11.892c0 2.096.547 4.142 1.588 5.945L.057 24l6.305-1.654a11.882 11.882 0 005.683 1.448h.005c6.554 0 11.89-5.335 11.893-11.893a11.821 11.821 0 00-3.48-8.413z"/>
                </svg>
              </div>
              <div>
                <h3 class="text-white font-bold text-2xl drop-shadow-md">ðŸ’¬ Agenda por WhatsApp</h3>
                <p class="text-white/95 font-semibold">âš¡ Respuesta inmediata - Â¡Reserva ya!</p>
              </div>
            </div>
            <a 
              href={business.whatsapp ? `https://wa.me/${business.whatsapp}?text=${encodeURIComponent(business.whatsappMessage)}` : '#'}
              target="_blank"
              rel="noopener noreferrer"
              class="block w-full bg-white hover:bg-green-50 text-green-700 font-bold py-5 rounded-xl text-center transition-all duration-300 transform hover:scale-105 shadow-2xl hover:shadow-green-900/50 ring-2 ring-white/50"
            >
              <span class="text-xl flex items-center justify-center">
                <svg class="w-6 h-6 mr-2" fill="currentColor" viewBox="0 0 20 20">
                  <path d="M2.003 5.884L10 9.882l7.997-3.998A2 2 0 0016 4H4a2 2 0 00-1.997 1.884z"></path>
                  <path d="M18 8.118l-8 4-8-4V14a2 2 0 002 2h12a2 2 0 002-2V8.118z"></path>
                </svg>
                ðŸ“± Enviar Mensaje WhatsApp
              </span>
            </a>
          </div>
        </div>

        <!-- InformaciÃ³n de contacto -->
        <div class="bg-neutral-800 rounded-2xl p-8 border border-neutral-700" data-aos="fade-right" data-aos-delay="100">
          <h3 class="text-white font-bold text-xl mb-6 flex items-center">
            <svg class="w-6 h-6 mr-3 text-yellow-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M13 16h-1v-4h-1m1-4h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
            </svg>
            InformaciÃ³n de Contacto
          </h3>
          
          <div class="space-y-4">
            <!-- TelÃ©fono -->
            <div class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-yellow-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 5a2 2 0 012-2h3.28a1 1 0 01.948.684l1.498 4.493a1 1 0 01-.502 1.21l-2.257 1.13a11.042 11.042 0 005.516 5.516l1.13-2.257a1 1 0 011.21-.502l4.493 1.498a1 1 0 01.684.949V19a2 2 0 01-2 2h-1C9.716 21 3 14.284 3 6V5z"></path>
              </svg>
              <div>
                <p class="text-neutral-400 text-sm">TelÃ©fono</p>
                <a href={`tel:${business.phone.replace(/\s/g, '')}`} class="text-white hover:text-yellow-400 transition-colors">
                  {business.phoneDisplay}
                </a>
              </div>
            </div>

            <!-- Email -->
            <div class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-yellow-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M3 8l7.89 5.26a2 2 0 002.22 0L21 8M5 19h14a2 2 0 002-2V7a2 2 0 00-2-2H5a2 2 0 00-2 2v10a2 2 0 002 2z"></path>
              </svg>
              <div>
                <p class="text-neutral-400 text-sm">Email</p>
                <a href={`mailto:${business.email}`} class="text-white hover:text-yellow-400 transition-colors">
                  {business.email}
                </a>
              </div>
            </div>

            <!-- DirecciÃ³n -->
            <div class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-yellow-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M17.657 16.657L13.414 20.9a1.998 1.998 0 01-2.827 0l-4.244-4.243a8 8 0 1111.314 0z"></path>
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M15 11a3 3 0 11-6 0 3 3 0 016 0z"></path>
              </svg>
              <div>
                <p class="text-neutral-400 text-sm">DirecciÃ³n</p>
                <p class="text-white">{business.address.street}</p>
                <p class="text-neutral-400 text-sm">{business.address.city}, {business.address.region}</p>
              </div>
            </div>

            <!-- Horario -->
            <div class="flex items-start space-x-3">
              <svg class="w-5 h-5 text-yellow-400 mt-1 flex-shrink-0" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
              </svg>
              <div>
                <p class="text-neutral-400 text-sm">Horario</p>
                <p class="text-white text-sm">{business.hours.weekday}</p>
                <p class="text-white text-sm">{business.hours.saturday}</p>
                <p class="text-neutral-400 text-sm">{business.hours.sunday}</p>
              </div>
            </div>
          </div>
        </div>

        <!-- Redes sociales -->
        {business.social && (
          <div class="flex space-x-4" data-aos="fade-right" data-aos-delay="200">
            {business.social.instagram && (
              <a 
                href={business.social.instagram}
                target="_blank"
                rel="noopener noreferrer"
                class="flex-1 bg-gradient-to-br from-purple-600 to-pink-500 text-white p-4 rounded-lg text-center hover:scale-105 transition-transform duration-300"
              >
                <svg class="w-6 h-6 mx-auto mb-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M12 2.163c3.204 0 3.584.012 4.85.07 3.252.148 4.771 1.691 4.919 4.919.058 1.265.069 1.645.069 4.849 0 3.205-.012 3.584-.069 4.849-.149 3.225-1.664 4.771-4.919 4.919-1.266.058-1.644.07-4.85.07-3.204 0-3.584-.012-4.849-.07-3.26-.149-4.771-1.699-4.919-4.92-.058-1.265-.07-1.644-.07-4.849 0-3.204.013-3.583.07-4.849.149-3.227 1.664-4.771 4.919-4.919 1.266-.057 1.645-.069 4.849-.069zm0-2.163c-3.259 0-3.667.014-4.947.072-4.358.2-6.78 2.618-6.98 6.98-.059 1.281-.073 1.689-.073 4.948 0 3.259.014 3.668.072 4.948.2 4.358 2.618 6.78 6.98 6.98 1.281.058 1.689.072 4.948.072 3.259 0 3.668-.014 4.948-.072 4.354-.2 6.782-2.618 6.979-6.98.059-1.28.073-1.689.073-4.948 0-3.259-.014-3.667-.072-4.947-.196-4.354-2.617-6.78-6.979-6.98-1.281-.059-1.69-.073-4.949-.073zm0 5.838c-3.403 0-6.162 2.759-6.162 6.162s2.759 6.163 6.162 6.163 6.162-2.759 6.162-6.163c0-3.403-2.759-6.162-6.162-6.162zm0 10.162c-2.209 0-4-1.79-4-4 0-2.209 1.791-4 4-4s4 1.791 4 4c0 2.21-1.791 4-4 4zm6.406-11.845c-.796 0-1.441.645-1.441 1.44s.645 1.44 1.441 1.44c.795 0 1.439-.645 1.439-1.44s-.644-1.44-1.439-1.44z"/>
                </svg>
                <span class="text-sm font-semibold">Instagram</span>
              </a>
            )}
            {business.social.facebook && (
              <a 
                href={business.social.facebook}
                target="_blank"
                rel="noopener noreferrer"
                class="flex-1 bg-blue-600 text-white p-4 rounded-lg text-center hover:scale-105 transition-transform duration-300"
              >
                <svg class="w-6 h-6 mx-auto mb-2" fill="currentColor" viewBox="0 0 24 24">
                  <path d="M24 12.073c0-6.627-5.373-12-12-12s-12 5.373-12 12c0 5.99 4.388 10.954 10.125 11.854v-8.385H7.078v-3.47h3.047V9.43c0-3.007 1.792-4.669 4.533-4.669 1.312 0 2.686.235 2.686.235v2.953H15.83c-1.491 0-1.956.925-1.956 1.874v2.25h3.328l-.532 3.47h-2.796v8.385C19.612 23.027 24 18.062 24 12.073z"/>
                </svg>
                <span class="text-sm font-semibold">Facebook</span>
              </a>
            )}
          </div>
        )}
      </div>

      <!-- Columna derecha: Mapa de Google Maps -->
      <div class="space-y-6">
        <div 
          class="relative rounded-2xl overflow-hidden shadow-2xl h-[500px] border border-neutral-700"
          data-aos="fade-left"
        >
          <!-- Mapa embebido de Google Maps - Temuco -->
          <iframe
            src="https://www.google.com/maps/embed?pb=!1m18!1m12!1m3!1d50893.89551747511!2d-72.63421372145123!3d-38.73960254999999!2m3!1f0!2f0!3f0!3m2!1i1024!2i768!4f13.1!3m3!1m2!1s0x9614d41e2e42f5f9%3A0x3b5b3b3b3b3b3b3b!2sTemuco%2C%20Araucan%C3%ADa%2C%20Chile!5e0!3m2!1ses!2scl!4v1234567890123!5m2!1ses!2scl"
            width="100%"
            height="100%"
            style="border:0;"
            allowfullscreen=""
            loading="lazy"
            referrerpolicy="no-referrer-when-downgrade"
            class="w-full h-full"
            title="Mapa de ubicaciÃ³n - BarberÃ­a Premium Temuco"
          ></iframe>
        </div>

        <!-- BotÃ³n para abrir en Google Maps -->
        <a 
          href={`https://www.google.com/maps?q=${business.geo.latitude},${business.geo.longitude}`}
          target="_blank"
          rel="noopener noreferrer"
          class="block w-full bg-neutral-800 hover:bg-neutral-700 text-white font-semibold py-4 rounded-lg text-center transition-all duration-300 border border-neutral-700"
          data-aos="fade-left"
          data-aos-delay="100"
        >
          <span class="flex items-center justify-center">
            <svg class="w-5 h-5 mr-2" fill="none" stroke="currentColor" viewBox="0 0 24 24">
              <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 20l-5.447-2.724A1 1 0 013 16.382V5.618a1 1 0 011.447-.894L9 7m0 13l6-3m-6 3V7m6 10l4.553 2.276A1 1 0 0021 18.382V7.618a1 1 0 00-.553-.894L15 4m0 13V4m0 0L9 7"></path>
            </svg>
            Abrir en Google Maps
          </span>
        </a>
      </div>
    </div>
  </div>
</section>
